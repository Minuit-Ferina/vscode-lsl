{
	"name": "lsl-tools",
	"displayName": "LSL Tools",
	"description": "Extended LSL support in Visual Studio Code",
	"author": {
		"name": "Minuit Ferina"
	},
	"license": "MIT",
	"version": "0.0.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/Minuit-Ferina/vscode-lsl.git"
	},
	"publisher": "MinuitFerina",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.74.0"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "lsl",
				"aliases": [
					"LSL",
					"lsl",
					"Linden Scripting Language"
				],
				"extensions": [
					".lsl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "lsl",
				"scopeName": "source.lsl",
				"path": "./syntaxes/lsl.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "LSL",
			"properties": {
				"lsl.enhancedColorization": {
					"type": "string",
					"enum": [
						"enabled",
						"disabled"
					],
					"default": "enabled",
					"markdownDescription": "%lsl.configuration.enhancedColorization.markdownDescription%",
					"scope": "window"
				}
			}
		}
	},
	"scripts": {
		"_vscode:prepublish": "npm run compile",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"es-run": "npx ./out/main.js",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^18.13.0",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"esbuild": "^0.17.8",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"typescript": "^4.9.4"
	}
}